# Environment variables for Python Chatbot Service

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp

# Vector Database Configuration (choose one)
# For Pinecone
USE_PINECONE=true
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=gearup-chatbot

# For FAISS (local)
USE_FAISS=false
FAISS_INDEX_PATH=./data/faiss_index

# Database Configuration (PostgreSQL)


# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Integration URLs - REQUIRED for production
SPRING_BOOT_BASE_URL=http://localhost:8080/api/v1
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000

# RAG Configuration
MAX_CONTEXT_DOCS=5
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Streaming Configuration
ENABLE_STREAMING=true
STREAM_CHUNK_SIZE=50
